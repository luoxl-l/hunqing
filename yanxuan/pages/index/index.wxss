/**index.wxss**/
.h-search {
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}
.h-search .address {
    width: 150rpx;
    font-size: 24rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.h-search .search {
  flex: 1;
  display: flex;
  align-items: center;
  background: #EDEDED;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.h-search .search image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 10rpx;
}

.h-search .search input {
  font-size: 28rpx;
}
.sw {
  margin-top: 20rpx;
  width: 100%;
  height: 416rpx;
}

.sw image {
  width: 100%;
}
.h-cate {
  display: flex;
  padding: 15rpx 0;
}
.h-cate navigator {
   flex:1;
}
.h-cate .c-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.c-item image {
  width: 58rpx;
  height: 58rpx;
}

.c-item text {
  font-size: 26rpx;
}
.sv-w-item {
  display: flex;
  background: #fafafa;
}

.sv-item {
  display: inline-block;
  width: 280rpx;
  margin:16rpx 0 16rpx 16rpx;
  background: white;
}

.sv-item image{
  width: 280rpx;
  height: 280rpx;
}

.sv-item text {
  display: block;
  font-size: 24rpx;
}