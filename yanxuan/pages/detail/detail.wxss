/* pages/detail/detail.wxss */
@import "/wxParse/wxParse.wxss";

.sw {
  height: 750rpx;
  width: 100%;
}

.sw image {
  width: 100%;
  height: 100%;
}

.mc {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 998;
}

.rect {
  width: 100%;
  height: 500rpx;
  position: fixed;
  z-index: 999;
  background: white;
  bottom: -500rpx;
}


.rect>view {
  display: flex;
  width: 270rpx;
  border: 1rpx solid #999;
}
.add,.sub {
  width: 90rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}

.rect>view>input {
  height: 70rpx;
  width: 100rpx;
  border-left: 1rpx solid #999;
  border-right: 1rpx solid #999;
}


.buy {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  display: flex;
  height: 100rpx;
  flex-direction: row;
}

.buy>view {
  flex:1;
}

.buy .star {
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 44rpx 44rpx;

}

.gou {
  display: flex;
  justify-content: center;
  align-items: center;
}

.gou image {
  width: 44rpx;
  height: 44rpx;
}

.gou {
  position: relative
}
.gou label {
  position: absolute;
  top: 20rpx;
  right: 55rpx;
  font-size: 16rpx;
  background: #B4282D;
  border-radius: 50%;
  color: white;
}
.now {
  font-size: 24rpx;
  text-align: center;
  line-height: 100rpx;
}

.join {
  text-align: center;
  line-height: 100rpx;
  background: #B4282D;
  color: white;
  font-size: 28rpx

}


